.navbar.bg-success-subtle
  .container-fluid
    .d-flex.align-items-center
      .navbar-brand.fs-2= link_to 'Sakura Market', root_path, class: 'text-decoration-none text-dark'
    - if user_signed_in?
      %ul.navbar-nav.flex-row.gap-3
        %li.nav-item
          = link_to t('users.navigation.orders'), users_orders_path, class: 'nav-link'
        %li.nav-item
          = link_to t('users.navigation.cart'), users_cart_path, class: 'nav-link'
    %ul.navbar-nav.ms-auto
      - if user_signed_in?
        %li.nav-item.d-flex.align-items-center
          .me-3= link_to current_user.name, edit_user_registration_path
          = button_to t('general.logout'), destroy_user_session_path, method: :delete, data: { turbo_confirm: t('views.log_out_confirm') }, class: 'btn btn-outline-danger'
      - else
        = link_to t('general.login'), new_user_session_path, class: 'btn btn-primary'
