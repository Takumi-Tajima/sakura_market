.navbar.bg-light
  .container-fluid
    .d-flex.align-items-center
      .navbar-brand.fs-2= link_to 'Sakura Market for Admin', admins_root_path, class: 'text-decoration-none text-dark'
    - if admin_signed_in?
      %ul.navbar-nav.flex-row.gap-3
        %li.nav-item
          = link_to t('admins.navigation.users'), admins_users_path, class: 'nav-link'
        %li.nav-item
          = link_to t('admins.navigation.orders'), admins_orders_path, class: 'nav-link'
    %ul.navbar-nav.ms-auto
      - if admin_signed_in?
        = button_to t('general.logout'), destroy_admin_session_path, method: :delete, data: { turbo_confirm: t('views.log_out_confirm') } ,class: 'btn btn-outline-danger'
