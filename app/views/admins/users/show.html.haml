.mt-4
  %h1.fs-2.mb-3 ユーザー詳細

  .card
    .card-body
      %dl.row
        %dt.col-sm-3= User.human_attribute_name(:name)
        %dd.col-sm-9= @user.name

        %dt.col-sm-3= User.human_attribute_name(:email)
        %dd.col-sm-9= @user.email

        %dt.col-sm-3= User.human_attribute_name(:address)
        %dd.col-sm-9= @user.address

        %dt.col-sm-3= User.human_attribute_name(:created_at)
        %dd.col-sm-9= l(@user.created_at)

        %dt.col-sm-3= User.human_attribute_name(:last_sign_in_at)
        %dd.col-sm-9= @user.last_sign_in_at ? l(@user.last_sign_in_at) : t('users.status.never_signed_in')

        %dt.col-sm-3= User.human_attribute_name(:sign_in_count)
        %dd.col-sm-9= @user.sign_in_count

  .mt-3.d-flex.justify-content-between
    = link_to t('general.edit'), edit_admins_user_path(@user), class: 'btn btn-primary'
    = button_to t('general.destroy'), admins_user_path(@user), method: :delete, data: { turbo_confirm: t('views.confirm') }, class: 'btn btn-outline-danger'
  .mt-5
    = link_to t('general.back'), admins_users_path
