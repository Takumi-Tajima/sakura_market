.container.py-5
  .row.row-cols-1.row-cols-md-2.row-cols-lg-3.g-4
    - @foods.each do |food|
      .col
        = link_to food_path(food), class: 'text-decoration-none' do
          .card.h-100.shadow-sm
            = food_cover_tag(food, :thumbnail)
            .card-body
              %h5.card-title.text-dark= food.name
              %p.card-text.text-primary.fw-bold= number_to_currency(food.price_with_tax)
